{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./esm",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "downlevelIteration": true,
    "skipLibCheck": true
  },

  "include": [
    "./lib/**/*"
  ]
}