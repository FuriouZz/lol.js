{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "Node",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "./lib/**/*"
  ]
}
