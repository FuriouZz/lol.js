{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist/cjs"
  },
  "include": [
    "./lib/**/*"
  ]
}
